{
  "name": "bro-fs",
  "version": "0.1.12",
  "description": "Promise-based HTML5 Filesystem API compatible with Node.js fs module",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/bro-fs.git"
  },
  "bugs": {
    "url": "https://github.com/vitalets/bro-fs/issues"
  },
  "main": "src/index.js",
  "scripts": {
    "dev": "karma start",
    "serve": "http-server docs -c-1",
    "code": "npm run eslint",
    "eslint": "eslint src test karma.*.js",
    "test": "karma start --single-run",
    "test-dist": "TEST_DIR=./dist/bro-fs npm t",
    "test-sauce": "karma start karma-sauce.conf.js",
    "ci": "npm run code && webpack && TEST_DIR=./dist/bro-fs npm run test-sauce",
    "docs": "rimraf 'docs/!(demo)' && jsdoc -c ./jsdoc.json",
    "demo": "cp dist/bro-fs.js docs/demo/bro-fs.js",
    "commit-docs": "git add -A docs && (git diff-index --quiet HEAD -- docs || git commit -m'docs' --no-verify)",
    "ch": "git diff-index --quiet HEAD -- docs",
    "release": "npm version $VER && npm publish",
    "release-patch": "VER=patch npm run release",
    "release-minor": "VER=minor npm run release",
    "preversion": "run-s code test docs demo commit-docs",
    "prepublish": "run-s build test-dist",
    "postpublish": "git push --follow-tags --no-verify",
    "precommit": "npm run code",
    "prepush": "npm run code && npm test"
  },
  "devDependencies": {
    "chai": "^4.1.2",
    "chai-as-promised": "^7.1.1",
    "chai-shallow-deep-equal": "^1.4.6",
    "docdash": "^0.4.0",
    "eslint": "^4.7.2",
    "eslint-plugin-mocha": "^4.11.0",
    "husky": "^0.14.3",
    "jsdoc": "^3.5.5",
    "karma": "^1.7.1",
    "karma-chai": "^0.1.0",
    "karma-chrome-launcher": "^2.2.0",
    "karma-mocha": "^1.3.0",
    "karma-mocha-reporter": "^2.2.4",
    "karma-sauce-launcher": "^1.2.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^2.0.4",
    "mocha": "^3.5.3",
    "npm-run-all": "^4.1.1",
    "rimraf": "^2.6.2",
    "webpack": "^3.6.0"
  },
  "keywords": [
    "fs",
    "filesystem",
    "html5-fs",
    "html5-filesystem",
    "browser-fs",
    "browser-filesystem",
    "web-fs",
    "web-filesystem"
  ],
  "license": "MIT"
}
