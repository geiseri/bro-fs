{
  "name": "bro-fs",
  "version": "0.1.5",
  "description": "Promise-based HTML5 Filesystem API compatible with Node.js fs module",
  "author": {
    "name": "Vitaliy Potapov",
    "email": "noginsk@rambler.ru"
  },
  "repository": {
    "type": "git",
    "url": "git://github.com/vitalets/bro-fs.git"
  },
  "bugs": {
    "url": "https://github.com/vitalets/bro-fs/issues"
  },
  "main": "src/index.js",
  "scripts": {
    "dev": "karma start",
    "code": "npm run eslint",
    "test": "karma start --single-run",
    "test-sauce": "karma start karma-sauce.conf.js",
    "dist": "webpack",
    "build": "npm run code && npm test && npm run dist",
    "build-docs": "npm run build && npm run docs && npm run update-demo",
    "build-ci": "npm run test-sauce && npm run dist",
    "eslint": "eslint src test karma.*.js",
    "docs": "rimraf 'docs/!(demo)' && jsdoc -c ./jsdoc.json",
    "update-demo": "cp dist/bro-fs.js docs/demo/bro-fs.js",
    "release-patch": "npm run build && npm version patch && npm run publish-to-npm",
    "publish-to-npm": "npm publish && git push --follow-tags --no-verify"
  },
  "devDependencies": {
    "chai": "^3.5.0",
    "chai-as-promised": "5.3.0",
    "chai-shallow-deep-equal": "^1.4.4",
    "docdash": "^0.4.0",
    "eslint": "^3.8.1",
    "eslint-plugin-mocha": "^4.7.0",
    "ghooks": "^1.3.2",
    "jsdoc": "^3.4.2",
    "karma": "^1.3.0",
    "karma-chai": "^0.1.0",
    "karma-chai-as-promised": "0.1.2",
    "karma-chai-shallow-deep-equal": "0.0.4",
    "karma-chrome-launcher": "^2.0.0",
    "karma-mocha": "^1.2.0",
    "karma-mocha-reporter": "^2.2.0",
    "karma-sauce-launcher": "^1.1.0",
    "karma-sourcemap-loader": "^0.3.7",
    "karma-webpack": "^1.8.0",
    "mocha": "^3.1.2",
    "rimraf": "^2.5.4",
    "webpack": "^1.13.2"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run code",
      "pre-push": "npm run code && npm test"
    }
  },
  "keywords": [
    "fs",
    "filesystem",
    "html5-fs",
    "html5-filesystem",
    "browser-fs",
    "browser-filesystem",
    "web-fs",
    "web-filesystem"
  ],
  "license": "MIT"
}
